<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
  logicalFilePath="db-changelog-000139-add-exportable-column-to-recordtype.xml">

  <changeSet author="appian" id="tag-000138">
    <tagDatabase tag="000138"/>
  </changeSet>

  <changeSet author="appian" id="000139.0.0">
    <comment>Create an "exportable" column in record_type to indicate if a record can be exported</comment>
    <addColumn tableName="record_type">
      <column name="is_exportable" type="${booleanType}" defaultValueBoolean="true" valueBoolean="true">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

</databaseChangeLog>
