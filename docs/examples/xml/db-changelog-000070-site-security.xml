<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
                   logicalFilePath="db-changelog-000070-site-security.xml">

  <changeSet author="appian" id="tag-000069">
    <tagDatabase tag="000069"/>
  </changeSet>

  <changeSet author="appian" id="000070.1.0">
    <comment>
      Create a "visibility" column in site to indicate the level of visibility
      on the site. Default Visibility is ACTIVE only (268435456)
    </comment>
    <addColumn tableName="site">
      <column name="visibility" type="${integerType}" defaultValueNumeric="268435456">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

</databaseChangeLog>
